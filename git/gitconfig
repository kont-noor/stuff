[user]
	name = Nickolay Kondratenko
	email = devmarkup@gmail.com

[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto

[core]
	editor = vim
	pager = less -R

[alias]
	a = add
	b = branch
	bd = branch -D
	c = commit -m
	d = diff
	f = fetch
	fo = fetch origin
	ff = pull --ff-only
	g = grep
	l = log
	m = merge
	co = checkout
	cb = checkout -b
	p = pull
	r = remote
	s = status

	st = status -sb

	sa = stash
	sp = stash pop
	sl = stash list

	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	lc = log ORIG_HEAD.. --stat --no-merges

	# from https://git.wiki.kernel.org/index.php/Aliases
	whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
	whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
	who = shortlog -s --

	# forced synchro
	get = !git pull && git submodule update --init --recursive
	put = !git commit -am "$1" && git push

	# undo aliases
	undo = !git reset --hard
	undoclean = !git reset --hard && git clean -fd
	uncommit = !git reset --soft HEAD^
	unadd = !git reset HEAD
	unstage = !git reset HEAD

[push]
	default = current
[init]
	templatedir = ~/.git
